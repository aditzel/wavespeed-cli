{
  "name": "wavespeed-cli",
  "version": "0.2.0",
  "description": "CLI for Wavespeed AI Bytedance Seedream V4 API",
  "type": "module",
  "bin": {
    "wavespeed": "dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && chmod +x dist/index.js",
    "dev": "bun run --hot src/index.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "lint": "biome check src tests",
    "lint:fix": "biome check --write src tests",
    "format": "biome format src tests"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "prompts": "^2.4.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@types/bun": "latest",
    "@types/node": "^24.8.1",
    "@types/prompts": "^2.4.9",
    "bun-types": "^1.3.0",
    "typescript": "^5.9.3"
  },
  "license": "MIT"
}
